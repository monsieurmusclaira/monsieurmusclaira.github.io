---
const { title, img, desc, url, badge, target = '_blank' } = Astro.props;
---
<div class="hero relative min-h-screen min-w-screen bg-black "  style={{backgroundImage: `url(${img})`}}>
  <a href={url} target={target}>
    <div class="hero-content absolute bottom-10 left-10 max-w-2xl">      
      <div class="">
        <h1 class="text-2xl color-primary font-bold font-mono capitalize ">
          {title}
          {badge && <div class="badge badge-neutral mx-2">{badge}</div>}
        </h1>
        <p class="text-xl">{desc}</p>
        <div class=" py-3">
          <button class="btn btn-outline">Learn More</button>
        </div>          
      </div>
    </div>
  </a>
</div>
